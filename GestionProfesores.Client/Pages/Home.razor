@page "/"
@using GestionProfesores.Shared.DTO
@using GestionProfesores.Client.Servicios
@inject IAlumnoServicio AlumnoServicio
@inject IAsistenciaServicio AsistenciaServicio
@inject INotaServicio NotaServicio
@inject IMateriaServicio MateriaServicio

<PageTitle>Inicio - Instituto Técnico Superior Córdoba</PageTitle>

<div class="container-fluid px-4 py-5">
    <!-- Encabezado principal -->
    <div class="row align-items-center mb-5">
        <div class="col-md-8">
            <div class="display-4 fw-bold text-primary mb-2">
                Instituto Técnico Superior Córdoba
            </div>
            <h2 class="text-muted mb-4">
                <i class="bi bi-mortarboard-fill text-warning"></i>
                Sistema de Gestión Académica
            </h2>
        </div>
        <div class="col-md-4 text-end">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-calendar3"></i>
                        @DateTime.Now.ToString("dddd, dd MMMM yyyy")
                    </h5>
                    <p class="card-text mb-0">
                        <i class="bi bi-clock"></i>
                        @DateTime.Now.ToString("HH:mm") hrs
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tarjetas de estadísticas -->
    <div class="row mb-5">
        <div class="col-md-3 mb-4">
            <div class="card border-start border-5 border-primary shadow h-100">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h5 class="card-title text-muted">Total Alumnos</h5>
                            <h2 class="fw-bold">@totalAlumnos</h2>
                        </div>
                        <div class="col-4 text-end">
                            <i class="bi bi-people-fill display-6 text-primary"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="/alumnos" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-arrow-right"></i> Gestionar
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-start border-5 border-success shadow h-100">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h5 class="card-title text-muted">Total Materias</h5>
                            <h2 class="fw-bold">@totalMaterias</h2>
                        </div>
                        <div class="col-4 text-end">
                            <i class="bi bi-journals display-6 text-success"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="#" class="btn btn-outline-success btn-sm">
                            <i class="bi bi-eye"></i> Ver Todas
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-start border-5 border-warning shadow h-100">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h5 class="card-title text-muted">Asistencias Hoy</h5>
                            <h2 class="fw-bold">@asistenciasHoy</h2>
                        </div>
                        <div class="col-4 text-end">
                            <i class="bi bi-calendar-check display-6 text-warning"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="/asistencias/registro" class="btn btn-outline-warning btn-sm">
                            <i class="bi bi-plus-circle"></i> Registrar
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-start border-5 border-info shadow h-100">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h5 class="card-title text-muted">Notas Registradas</h5>
                            <h2 class="fw-bold">@totalNotas</h2>
                        </div>
                        <div class="col-4 text-end">
                            <i class="bi bi-clipboard-data display-6 text-info"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="/notas/registro" class="btn btn-outline-info btn-sm">
                            <i class="bi bi-pencil-square"></i> Calificar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Acciones rápidas -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-gradient bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-lightning-charge"></i> Acciones Rápidas
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-3">
                            <a href="/alumnos/nuevo" class="card action-card h-100 text-decoration-none">
                                <div class="card-body text-center">
                                    <i class="bi bi-person-plus display-4 text-primary mb-3"></i>
                                    <h5 class="card-title">Nuevo Alumno</h5>
                                    <p class="card-text text-muted">Registrar nuevo estudiante</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="/asistencias/registro" class="card action-card h-100 text-decoration-none">
                                <div class="card-body text-center">
                                    <i class="bi bi-calendar2-plus display-4 text-warning mb-3"></i>
                                    <h5 class="card-title">Tomar Asistencia</h5>
                                    <p class="card-text text-muted">Registrar asistencia diaria</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="/notas/registro" class="card action-card h-100 text-decoration-none">
                                <div class="card-body text-center">
                                    <i class="bi bi-pencil-square display-4 text-success mb-3"></i>
                                    <h5 class="card-title">Cargar Notas</h5>
                                    <p class="card-text text-muted">Ingresar calificaciones</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="/alumnos" class="card action-card h-100 text-decoration-none">
                                <div class="card-body text-center">
                                    <i class="bi bi-search display-4 text-info mb-3"></i>
                                    <h5 class="card-title">Consultar Datos</h5>
                                    <p class="card-text text-muted">Ver historial académico</p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Últimas actividades -->
    <div class="row">
        <div class="col-md-8 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-gradient bg-dark text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-activity"></i> Actividad Reciente
                    </h4>
                </div>
                <div class="card-body">
                    @if (ultimasActividades.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var actividad in ultimasActividades)
                            {
                                <div class="list-group-item">
                                    <div class="row align-items-center">
                                        <div class="col-auto">
                                            <div class="avatar @actividad.ColorAvatar">
                                                <i class="@actividad.Icono"></i>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <h6 class="mb-1">@actividad.Titulo</h6>
                                            <p class="mb-1 text-muted small">@actividad.Descripcion</p>
                                            <small class="text-muted">
                                                <i class="bi bi-clock"></i> @actividad.Tiempo
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox display-4 text-muted mb-3"></i>
                            <p class="text-muted">No hay actividad reciente</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-gradient bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-info-circle"></i> Información del Sistema
                    </h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="https://cdn-icons-png.flaticon.com/512/2235/2235437.png"
                             alt="Logo" class="img-fluid mb-3" style="max-height: 100px;">
                        <h5 class="text-success">Sistema de Gestión Académica</h5>
                        <p class="text-muted">Versión 1.0</p>
                    </div>

                    <div class="border-top pt-3">
                        <h6><i class="bi bi-shield-check text-primary"></i> Características:</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success"></i>
                                Gestión de alumnos
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success"></i>
                                Control de asistencias
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success"></i>
                                Registro de calificaciones
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success"></i>
                                Reportes académicos
                            </li>
                        </ul>
                    </div>

                    <div class="border-top pt-3">
                        <h6><i class="bi bi-telephone text-info"></i> Soporte Técnico:</h6>
                        <p class="mb-1">
                            <i class="bi bi-envelope"></i>
                            soporte@institutocordoba.edu.ar
                        </p>
                        <p class="mb-0">
                            <i class="bi bi-phone"></i>
                            (0351) 423-4567
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pie de página -->
    <footer class="mt-5 pt-4 border-top">
        <div class="row">
            <div class="col-md-6">
                <h5 class="text-primary">
                    <i class="bi bi-building"></i>
                    Instituto Técnico Superior Córdoba
                </h5>
                <p class="text-muted">
                    Av. Vélez Sarsfield 1234 - Córdoba Capital<br>
                    Formando profesionales desde 1995
                </p>
            </div>
            <div class="col-md-6 text-end">
                <p class="text-muted">
                    &copy; @DateTime.Now.Year - Sistema de Gestión Académica<br>
                    <small>Desarrollado con Blazor WebAssembly y .NET 8</small>
                </p>
            </div>
        </div>
    </footer>
</div>

