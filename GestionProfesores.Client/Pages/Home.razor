@code {
    private int totalAlumnos = 0;
    private int totalMaterias = 0;
    private int asistenciasHoy = 0;
    private int totalNotas = 0;
    private List<Actividad> ultimasActividades = new();
    private bool cargando = true;

    protected override async Task OnInitializedAsync()
    {
        await CargarEstadisticas();
        await CargarActividades();
        cargando = false;
    }

    private async Task CargarEstadisticas()
    {
        try
        {
            // Cargar total de alumnos
            var respuestaAlumnos = await AlumnoServicio.GetAlumnos();
            if (!respuestaAlumnos.Error && respuestaAlumnos.Respuesta != null)
            {
                totalAlumnos = respuestaAlumnos.Respuesta.Count;
            }

            // Cargar total de materias
            var respuestaMaterias = await MateriaServicio.GetMaterias();
            if (!respuestaMaterias.Error && respuestaMaterias.Respuesta != null)
            {
                totalMaterias = respuestaMaterias.Respuesta.Count;
            }

            // Cargar asistencias de hoy
            var hoy = DateOnly.FromDateTime(DateTime.Now);
            var respuestaAsistencias = await AsistenciaServicio.GetAsistenciasByFecha(hoy);
            if (!respuestaAsistencias.Error && respuestaAsistencias.Respuesta != null)
            {
                asistenciasHoy = respuestaAsistencias.Respuesta.Count;
            }

            // Cargar total de notas
            var respuestaNotas = await NotaServicio.GetNotas();
            if (!respuestaNotas.Error && respuestaNotas.Respuesta != null)
            {
                totalNotas = respuestaNotas.Respuesta.Count;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error cargando estadísticas: {ex.Message}");
        }
    }

    private async Task CargarActividades()
    {
        // Ejemplo de actividades (puedes cargarlas desde la API)
        ultimasActividades = new List<Actividad>
        {
            new Actividad
            {
                Icono = "bi bi-person-plus",
                ColorAvatar = "avatar-primary",
                Titulo = "Nuevo alumno registrado",
                Descripcion = "Juan Pérez se ha registrado en el sistema",
                Tiempo = "Hace 2 horas"
            },
            new Actividad
            {
                Icono = "bi bi-calendar-check",
                ColorAvatar = "avatar-success",
                Titulo = "Asistencia registrada",
                Descripcion = "Se tomó asistencia para Matemáticas",
                Tiempo = "Hace 4 horas"
            },
            new Actividad
            {
                Icono = "bi bi-clipboard-data",
                ColorAvatar = "avatar-warning",
                Titulo = "Notas actualizadas",
                Descripcion = "Se cargaron notas del examen parcial",
                Tiempo = "Ayer"
            },
            new Actividad
            {
                Icono = "bi bi-file-earmark-text",
                ColorAvatar = "avatar-info",
                Titulo = "Reporte generado",
                Descripcion = "Reporte de rendimiento trimestral",
                Tiempo = "Hace 2 días"
            }
        };
    }

    private class Actividad
    {
        public string Icono { get; set; } = string.Empty;
        public string ColorAvatar { get; set; } = string.Empty;
        public string Titulo { get; set; } = string.Empty;
        public string Descripcion { get; set; } = string.Empty;
        public string Tiempo { get; set; } = string.Empty;
    }
}